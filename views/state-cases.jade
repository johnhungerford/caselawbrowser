extends layout

block content
	p(align)
	h1 Caselaw Explorer
	h2 State Level Jurisdictions

	- var date = new Date
	- var yyyy = date.getFullYear();
	- var mm = date.getMonth()+1;
	- if ( mm < 10 ) { mm = '0' + mm };
	- var dd = date.getDate();
	- if ( dd < 10 ) { dd = '0' + dd };
	- var dateString = yyyy + '-' + mm + '-' + dd;

	div.fields-container
		div.field-horizontal
			label(for='min-date') Earliest Decision Date
			input#min-date(type='date' min='1657-01-01' max='#{dateString}')
		div.field-horizontal
			label(for='max-date') Latest Decision Date
			input#max-date(type='date' min='1657-01-01' max='#{dateString}' )

	p
		| Select State: 
		select#state-select
			option(value='none') All States

	p
		| Select Court: 
		select#court-select
			option(value='none') All Courts

	p
		| Search terms: 
		input#search-terms(type='text')

	div#results


	div.key-box
		| API Key: 
		input.key-field(type='text')

	script var key = '#{key}';

	script(src='/javascripts/state-cases.js')