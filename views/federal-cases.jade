extends layout

block content
	p(align)
	h1 Caselaw Explorer
	h2 Federal Jurisdictions

	p
		label(for='year-range') Year range of decision: 
		input#year-range(type='text' readonly font-weight:bold)

	div#slider-container
		div#slider-shrinker
			div.slider#year-slider

	p
		| Select Court: 
		select#court-select
			option(value='none') All Courts

	p
		| Search terms: 
		input#search-terms(type='text')

	div#results

	div.key-box
		| API Key: 
		input.key-field(type='text')

	script var key = '#{key}';

	script(src='/javascripts/federal-cases.js')