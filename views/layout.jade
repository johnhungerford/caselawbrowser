doctype html
html
	head
		title Caselaw Explorer
		link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
		link(rel='stylesheet', href='https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='https://code.jquery.com/jquery-1.12.4.js')
		script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
		script(src='/bootstrap/js/bootstrap.min.js')
	body
		nav.navbar.navbar-expand-lg.navbar-light.navbar-color
			div.container.text-light
				a.text-light.navbar-brand(href='/') Case Law Browser
				button.navbar-toggler(type='button', data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
					span.navbar-toggler-icon
				div#navbarSupportedContent.collapse.navbar-collapse
					ul.navbar-nav.mr-auto
						li.nav-item
							a.text-light.nav-link.federal-link(href='#') Federal Cases
						li.nav-item
							a.text-light.nav-link.state-link(href='#') State Cases
					div.key-field-box
						span.key-text API Key: 
						if key
							input#key-field(type='text' placeholder='CAP API Key' aria-label='Search' style='display:none')
							span.text-light.key-text#key-val #{key}
						else
							input#key-field(type='text' placeholder='CAP API Key' aria-label='Search')
							span.text-light.key-text#key-val(style='display:none') #{key}
							

		- var date = new Date;
		- var yyyy = date.getFullYear();
		- var mm = date.getMonth()+1;
		- if ( mm < 10 ) { mm = '0' + mm };
		- var dd = date.getDate();
		- if ( dd < 10 ) { dd = '0' + dd };
		- var dateString = yyyy + '-' + mm + '-' + dd;
		script.
			var key = '#{key}';

		block content
		
